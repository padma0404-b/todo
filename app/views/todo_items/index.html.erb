<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
  <div class="max-w-4xl mx-auto px-4">
    <div class="bg-white rounded-lg shadow-xl p-8">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800">My Todo List</h1>
        <%= link_to new_todo_item_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200 shadow-md hover:shadow-lg" do %>
          <span class="text-xl">+ New Todo</span>
        <% end %>
      </div>

      <% if notice %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
          <%= notice %>
        </div>
      <% end %>

      <% if @todo_items.any? %>
        <div class="space-y-4">
          <% @todo_items.each do |todo_item| %>
            <div class="bg-gray-50 rounded-lg p-6 border border-gray-200 hover:shadow-md transition duration-200 <%= 'opacity-60' if todo_item.completed? %>">
              <div class="flex items-start justify-between">
                <div class="flex items-start space-x-4 flex-1">
                  <%= button_to toggle_todo_item_path(todo_item), method: :patch, class: "mt-1" do %>
                    <% if todo_item.completed? %>
                      <svg class="w-6 h-6 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                      </svg>
                    <% else %>
                      <svg class="w-6 h-6 text-gray-400 hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" stroke-width="2"/>
                      </svg>
                    <% end %>
                  <% end %>
                  
                  <div class="flex-1">
                    <h3 class="text-xl font-semibold <%= 'line-through text-gray-500' if todo_item.completed? %>">
                      <%= todo_item.title %>
                    </h3>
                    <% if todo_item.description.present? %>
                      <p class="text-gray-600 mt-2 <%= 'line-through' if todo_item.completed? %>">
                        <%= todo_item.description %>
                      </p>
                    <% end %>
                    <p class="text-sm text-gray-400 mt-2">
                      Created <%= time_ago_in_words(todo_item.created_at) %> ago
                    </p>
                  </div>
                </div>

                <div class="flex space-x-2 ml-4">
                  <%= link_to edit_todo_item_path(todo_item), class: "text-blue-600 hover:text-blue-800 font-medium px-3 py-1 rounded hover:bg-blue-50 transition" do %>
                    Edit
                  <% end %>
                  <%= button_to todo_item_path(todo_item), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 font-medium px-3 py-1 rounded hover:bg-red-50 transition" do %>
                    Delete
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-24 w-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          <h3 class="mt-4 text-xl font-medium text-gray-900">No todos yet</h3>
          <p class="mt-2 text-gray-500">Get started by creating a new todo item.</p>
          <%= link_to "Create your first todo", new_todo_item_path, class: "mt-6 inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
